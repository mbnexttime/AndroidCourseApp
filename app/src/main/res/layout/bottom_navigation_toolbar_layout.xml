<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_toolbar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/black">

    <HorizontalScrollView
        android:id="@+id/bottom_navigation_toolbar_scroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/bottom_navigation_toolbar"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation_toolbar"
        app:layout_constraintStart_toStartOf="@id/bottom_navigation_toolbar"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation_toolbar">

        <LinearLayout
            android:id="@+id/bottom_navigation_toolbar_titles_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
